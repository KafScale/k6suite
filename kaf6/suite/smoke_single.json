{
  "name": "smoke_single",
  "description": "S3 single message produce/consume",
  "profile": "local-service",
  "brokers": ["127.0.0.1:39092"],
  "topics": [
    {
      "name": "smoke-single-{{run_id}}",
      "partitions": 1,
      "recreate": true
    }
  ],
  "scenarios": {
    "producer": {
      "type": "produce",
      "clients": 1,
      "messages": 1,
      "rate_per_s": 0,
      "topic": "smoke-single-{{run_id}}",
      "value": {
        "json": {
          "uuid": "{{uuid}}",
          "ts": "{{now}}"
        }
      }
    },
    "consumer": {
      "type": "consume",
      "clients": 1,
      "group": {
        "id": "smoke-single-{{run_id}}"
      },
      "topic": "smoke-single-{{run_id}}",
      "offset": "earliest",
      "limit": 1,
      "timeout": "30s"
    }
  },
  "checks": [
    {
      "name": "delivered_one",
      "type": "count_equals",
      "expected": 1
    }
  ]
}
